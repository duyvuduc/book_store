<%= form_with(model: order,local: true) do |f| %>
    <div class="field">
        <%= f.label :address  %>
        <%= f.text_field :address %>
    </div>

    <div class="field">
        <%= f.label :total  %>
        <%= f.text_field :total %>
    </div>

    <div class="field">
        <%= f.label :phone_number  %>
        <%= f.text_field :phone_number %>
    </div>

    <div class="field">
        <%= f.label :email  %>
        <%= f.text_field :email %>
    </div>

    <div class="field">
        <%= f.label :customer_name  %>
        <%= f.text_field :customer_name %>
    </div>

    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>